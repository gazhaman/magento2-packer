{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "jenkins_build":"",
    "git_version": "",
    "timestamp": "",
    "region": "",
    "source_ami": "",
    "instance_type": "",
    "vpc_id": "",
    "subnet_id": ""

  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `region`}}",
      "source_ami": "{{user `source_ami`}}",
      "instance_type": "{{user `instance_type`}}",
      "run_tags": {"Name": "packer_deploy_{{user `jenkins_build`}}_{{user `git_version`}}_{{user `timestamp`}}"},
      "snapshot_tags": {"Name": "packer_deploy_{{user `jenkins_build`}}_{{user `git_version`}}_{{user `timestamp`}}"},
      "ssh_username": "ec2-user",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "ami_name": "app_{{user `jenkins_build`}}_{{user `git_version`}}_{{user `timestamp`}}"
    }
  ],
  "provisioners": [
        {
          "type":            "ansible-local",
          "playbook_dir":    "./ansible-local",
          "playbook_file":   "./ansible-local/deploy.yml",
          "inventory_file":  "./ansible-local/inventories/hosts",
          "group_vars":      "./ansible-local/inventories/group_vars",
          "clean_staging_directory": true,
          "extra_arguments": ["--extra-vars", "\"git_version={{ user `git_version`}}\"", "-vv"]
        }
      ]
}
