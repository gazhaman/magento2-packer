{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "jenkins_build":"",
    "git_version": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "ami-057b204c3eddef019",
      "instance_type": "t2.micro",
      "run_tags": {"Name": "packer_deploy_{{user `jenkins_build`}}_{{user `git_version`}}"},
      "snapshot_tags": {"Name": "packer_deploy_{{user `jenkins_build`}}_{{user `git_version`}}"},
      "ssh_username": "ec2-user",
      "ami_name": "app_{{user `jenkins_build`}}_{{user `git_version`}}_{{timestamp}}",
    }
  ],
  "provisioners": [
        {
          "type":            "ansible-local",
          "playbook_dir":     "./ansible-local",
          "playbook_file":   "./ansible-local/deploy.yml",
          "extra_arguments": ["--extra-vars", "\"git_version={{ user `git_version`}}\""]
        }
      ]
}
