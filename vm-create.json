{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "jenkins_build":"",
    "git_version": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "ami-057b204c3eddef019",
      "instance_type": "t2.micro",
      "run_tags": {"Name": "packer_deploy_{{user `jenkins_build`}}_{{user `git_version`}}_{{timestamp}}"},
      "snapshot_tags": {"Name": "packer_deploy_{{user `jenkins_build`}}_{{user `git_version`}}_{{timestamp}}"},
      "ssh_username": "ec2-user",
      "vpc_id": "vpc-1639e66e",
      "subnet_id": "subnet-24a4001b",
      "ami_name": "app_prod_{{user `jenkins_build`}}_{{user `git_version`}}_{{timestamp}}"
    }
  ],
  "provisioners": [
        {
          "type": "file",
          "source": "./ansible-remote",
          "destination": "/tmp"
        },

        {
          "type": "shell",
          "inline": ["ansible-playbook /tmp/ansible-remote/deploy.yml -vv"]
        },

        {
          "type":            "ansible-local",
          "playbook_dir":    "./ansible-local",
          "playbook_file":   "./ansible-local/deploy.yml",
          "inventory_file":  "./ansible-local/inventories/hosts",
          "group_vars":      "./ansible-local/inventories/group_vars",
          "clean_staging_directory": true,
          "extra_arguments": ["--extra-vars", "\"git_version={{ user `git_version`}}\"", "-vv"]
        }
      ]
}
